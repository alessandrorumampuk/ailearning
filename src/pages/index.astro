---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Unio AI - Home">
	<main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-12 px-4">
		<div class="max-w-6xl mx-auto">
			<!-- Header -->
			<div class="text-center mb-12">
				<h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-4">
					<span class="text-blue-600 dark:text-blue-400">AI Learning</span>
				</h1>
			</div>

			<!-- Cards Grid -->
			<div class="flex justify-center">
				<!-- Chatbot Card -->
				<a href="/chatbot" class="group block">
					<div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 p-8 border border-gray-200 dark:border-gray-700">
						<div class="text-center">
							<!-- Chatbot Icon -->
							<div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
								<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
								</svg>
							</div>
							
							<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">AI Chatbot</h2>
							<div class="mt-6">
								<span class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg group-hover:bg-blue-700 transition-colors">
									Start
									<svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</span>
							</div>
						</div>
					</div>
				</a>
			</div>
		</div>
	</main>
</Layout>
